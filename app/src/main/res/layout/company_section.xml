<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView2"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:clickable="false"
    android:focusable="true"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        >
        <TextView
            android:id="@+id/company_ticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="AAPL" />
        <TextView
            android:id="@+id/company_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="202.68" />
        <TextView
            android:id="@+id/company_nameOrShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="14sp"
            tools:text="Apple Inc" />
        <ImageView
            android:id="@+id/company_change_image"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/company_change"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/ic_twotone_trending_up_24"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
            android:id="@+id/company_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="2.68" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/company_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        app:srcCompat="@drawable/ic_right_arrow">
    </ImageButton>





    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>