<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#FFFFFF"
    android:backgroundTint="#319A5C">

    <TextView
        android:id="@+id/main_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Congratulations!"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/main_title"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_title2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="xxxxxxxxxxxxxxxx"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textSize="15sp" />


    />

    <Button
        android:id="@+id/donetBtn"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_weight="1"
        android:backgroundTint="#E1E3E5"
        android:text="DONE"
        android:textColor="#3D9F41"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/portfolio_dialog"/>


</RelativeLayout>